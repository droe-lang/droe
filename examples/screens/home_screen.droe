@target html

// Include the layout file
@include AppLayoutModule from "layouts/app_layout.droe"

module HomeModule
    // Define a screen that uses the AppLayout
    screen HomeScreen layout="AppLayout"
        // Content for the main "content" slot 
        title "Welcome to Our Application"
        text "This is the home screen using the AppLayout with header, footer, and main slots."
        
        column class "features"
            title "Features" class "section-title"
            text "• Modular layout system"
            text "• Reusable components"  
            text "• Slot-based content injection"
        end column
        
        form "contact-form"
            title "Get In Touch"
            input "Name" type="text" placeholder="Your name"
            input "Email" type="email" placeholder="Your email"
            textarea "Message" rows=4 placeholder="Your message"
            button "Send Message" action="send_contact"
        end form
    end screen
    
    // Simple screen with minimal layout
    screen LoginScreen layout="SimpleLayout"
        form "login-form" class="centered-form"
            title "Login"
            input "Email" type="email" placeholder="Enter your email"
            input "Password" type="password" placeholder="Enter your password"
            checkbox "Remember me"
            button "Sign In" action="login"
            text "Don't have an account? Sign up"
        end form
    end screen
end module