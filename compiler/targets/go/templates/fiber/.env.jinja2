# Database Configuration
{% if database.type == 'postgres' %}
DATABASE_URL="{{ database.url | default('postgresql://localhost/test_db') }}"
{% elif database.type == 'mysql' %}
DATABASE_URL="{{ database.url | default('root:password@tcp(localhost:3306)/test_db?charset=utf8mb4&parseTime=True&loc=Local') }}"
{% else %}
DATABASE_URL="{{ database.url | default('./database.db') }}"
{% endif %}

