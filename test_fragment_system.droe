// Test file for the new fragment-based screen system
// This demonstrates the new syntax: screen, fragment, slot, classes, styles

module TestModule
    // Define a header fragment with multiple slots
    fragment HeaderFragment
        slot "brand" classes "brand-section" styles "padding: 10px"
        slot "navigation" classes "nav-menu"
        slot "actions" classes "header-actions" styles "margin-left: auto"
    end fragment
    
    // Define a content fragment  
    fragment ContentFragment
        slot "sidebar" classes "sidebar-panel" styles "width: 200px; background: #f5f5f5"
        slot "main" classes "main-content" styles "flex: 1; padding: 20px"
    end fragment
    
    // Define a footer fragment
    fragment FooterFragment
        slot "links" classes "footer-links"
        slot "copyright" classes "copyright-text" styles "text-align: center"
    end fragment
    
    // Create a screen that uses these fragments
    screen Dashboard classes "dashboard-screen" styles "min-height: 100vh"
        fragment HeaderFragment
            slot "brand":
                title "My Application" classes "app-title, bold" styles "color: #333; font-size: 24px"
            end slot
            slot "navigation":
                button "Home" classes "nav-btn, active" styles "margin-right: 10px"
                button "Reports" classes "nav-btn" styles "margin-right: 10px"  
                button "Settings" classes "nav-btn"
            end slot
            slot "actions":
                button "Profile" classes "profile-btn" styles "border-radius: 50%"
            end slot
        end fragment
        
        fragment ContentFragment
            slot "sidebar":
                title "Quick Links" classes "sidebar-title" styles "margin-bottom: 15px"
                button "New Item" classes "sidebar-btn, primary"
                button "View All" classes "sidebar-btn"
                button "Export" classes "sidebar-btn"
            end slot
            slot "main":
                title "Dashboard Overview" classes "page-title" styles "color: #2c3e50; margin-bottom: 20px"
                text "Welcome to your dashboard. Here you can view your latest activity and manage your account." classes "welcome-text" styles "line-height: 1.6; color: #666"
                
                title "Recent Activity" classes "section-title" styles "margin-top: 30px; color: #34495e"
                text "No recent activity to display." classes "empty-state" styles "font-style: italic; color: #999"
            end slot
        end fragment
        
        fragment FooterFragment
            slot "links":
                button "Privacy" classes "footer-link"
                button "Terms" classes "footer-link" 
                button "Support" classes "footer-link"
            end slot
            slot "copyright":
                text "Â© 2025 My Application. All rights reserved." classes "copyright" styles "margin-top: 10px; font-size: 12px; color: #888"
            end slot
        end fragment
    end screen
    
    // Create a simpler screen for comparison
    screen SimplePage classes "simple-page"
        fragment ContentFragment
            slot "main":
                title "Simple Page" classes "page-title"
                text "This is a simple page with just main content." classes "page-text"
            end slot
        end fragment
    end screen
end module